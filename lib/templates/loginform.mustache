<div class="my-1 my-sm-5"></div>
<div class="row justify-content-center">
<div class="col-xl-6 col-sm-8 ">
<div class="card">
    <div class="card-block">
        {{#logourl}}
            <h2 class="card-header text-center" ><img src="{{logourl}}" class="img-fluid" title="{{sitename}}" alt="{{sitename}}"/></h2>
        {{/logourl}}
        {{^logourl}}
            <h2 class="card-header text-center">{{sitename}}</h2>
        {{/logourl}}
        <div class="card-body">
            {{#cansignup}}
                <div class="sr-only">
                    <a href="{{signupurl}}">{{#str}} tocreatenewaccount {{/str}}</a>
                </div>
            {{/cansignup}}

            {{#error}}
                <div class="loginerrors mt-3">
                    <a href="#" id="loginerrormessage" class="accesshide">{{error}}</a>
                    <div class="alert alert-danger" role="alert" data-aria-autofocus="true">{{error}}</div>
                </div>
            {{/error}}

            <div id="primaryLoginTASA" class="row justify-content-md-center">
                <div class="col-md-5">
                    <form class="mt-3" action="{{loginurl}}" method="post" id="login">
                        <input id="anchor" type="hidden" name="anchor" value="">
                        <script>document.getElementById('anchor').value = location.hash;</script>
                        <input type="hidden" name="logintoken" value="{{logintoken}}">
                        <div class="form-group">
                            <label for="username" class="sr-only">
                                {{^canloginbyemail}}
                                    {{#str}} username {{/str}}
                                {{/canloginbyemail}}
                                {{#canloginbyemail}}
                                    {{#str}} usernameemail {{/str}}
                                {{/canloginbyemail}}
                            </label>
                            <input type="text" name="username" id="username"
                                class="form-control"
                                value="{{username}}"
                                placeholder={{#quote}}{{^canloginbyemail}}{{#str}}username{{/str}}{{/canloginbyemail}}{{#canloginbyemail}}{{#str}}usernameemail{{/str}}{{/canloginbyemail}}{{/quote}}
                                autocomplete="username">
                        </div>
                        <div class="form-group">
                            <label for="password" class="sr-only">{{#str}} password {{/str}}</label>
                            <input type="password" name="password" id="password" value=""
                                class="form-control"
                                placeholder={{#quote}}{{#str}}password{{/str}}{{/quote}}
                                autocomplete="current-password">
                        </div>
                        {{#rememberusername}}
                            <div class="rememberpass mt-3">
                                <input type="checkbox" name="rememberusername" id="rememberusername" value="1" {{#username}}checked="checked"{{/username}} />
                                <label for="rememberusername">{{#str}} rememberusername, admin {{/str}}</label>
                            </div>
                        {{/rememberusername}}

                        <button type="submit" class="btn btn-primary btn-block mt-3" id="loginbtn">{{#str}}login{{/str}}</button>
                    </form>
                </div>

                <div class="col-md-5">
                    <div class="forgetpass mt-3">
                        <p><a href="{{forgotpasswordurl}}">{{#str}}forgotten{{/str}}</a></p>
                    </div>

                    <div class="mt-3">
                        {{#str}} cookiesenabled {{/str}}
                        {{{cookieshelpiconformatted}}}
                    </div>
                    {{#canloginasguest}}
                        <div class="mt-2">
                            <p>{{#str}}someallowguest{{/str}}</p>
                            <form action="{{loginurl}}" method="post" id="guestlogin">
                                <input type="hidden" name="logintoken" value="{{logintoken}}">
                                <input type="hidden" name="username" value="guest" />
                                <input type="hidden" name="password" value="guest" />
                                <button class="btn btn-secondary btn-block" type="submit">{{#str}}loginguest{{/str}}</button>
                            </form>
                        </div>
                    {{/canloginasguest}}

                    <div class="mt-2">
                        <div class="mt-5"> IDENTIFÍQUESE USANDO SU CÓDIGO DE TRABAJADOR</div>
                        <div class="mt-3">
                            <button id="btnCodigoTrabajador" class="btn btn-secondary btn-block" type="submit">CÓDIGO DE TRABAJADOR</button>
                        </div>
                    </div>

                {{#hasidentityproviders}}
                    <h6 class="mt-2">{{#str}} potentialidps, auth {{/str}}</h6>
                    <div class="potentialidplist mt-3">
                        {{#identityproviders}}
                            <div class="potentialidp">
                                <a href="{{url}}" title={{#quote}}{{name}}{{/quote}} class="btn btn-secondary btn-block">
                                    {{#iconurl}}
                                        <img src="{{iconurl}}" alt="" width="24" height="24"/>
                                    {{/iconurl}}
                                    {{name}}
                                </a>
                            </div>
                        {{/identityproviders}}
                    </div>
                {{/hasidentityproviders}}
                </div>
            </div>
            <div id="customLoginTASA" class="hidden">
                <div class="labelLogin1">INGRESA USANDO TUS DATOS</div>
                <div class="mt-4">
                    <input type="text" name="dniTASA" id="dniTASA"
                           class="form-control"
                           placeholder="DNI">
                </div>
                <div class="mt-4">
                    <input type="text" name="codigoTrabajadorTASA" id="codigoTrabajadorTASA"
                           class="form-control"
                           placeholder="CÓDIGO DE TRABAJADOR">
                </div>
                <div class="mt-4">
                    <div  id="recaptcha-container"></div>
                </div>
                <button type="submit" class="btn btn-primary btn-block mt-4" id="btnLoginTASA">Acceder</button>
            </div>
            <div id="customLoginTASASMS" class="hidden">
                <div class="labelLogin1">Ingresa el codigo</div>
                <div class="mt-4">
                    Te enviamos un código de verificación al celular que termina en <label id="terminaPhone" style="font-weight: bold"></label>
                </div>
                <div class="mt-4">
                    <input type="text" name="tokenSMS" id="tokenSMS"
                           class="form-control"
                           placeholder="Código">
                </div>
                <div id="volverEnviarCodigo" class="volverEnviarCodigo" style="cursor: pointer;">
                    Volver a enviar código
                </div>
                <input id="dniT" type="hidden" value="">
                <input id="codigoT" type="hidden" value="">
                <input id="phoneNumber" type="hidden" value="">
                <button type="submit" class="btn btn-primary btn-block mt-4" id="btnEnterMoodleTASA">Acceder</button>
            </div>
        </div>
    </div>
</div>
</div>
</div>


{{#hasinstructions}}
<div class="row justify-content-center mt-3">
<div class="col-xl-6 col-sm-8">
<div class="card">
    <div class="card-body">
        <div class="card-title">
            <h2>{{#str}}firsttime{{/str}}</h2>
        </div>
        <div>
        {{{instructions}}}
        {{#cansignup}}
            <form class="mt-3" action="{{signupurl}}" method="get" id="signup">
                <button type="submit" class="btn btn-secondary">{{#str}}startsignup{{/str}}</button>
            </form>
        {{/cansignup}}
        </div>
    </div>
</div>
</div>
</div>
{{/hasinstructions}}

{{#maintenance}}
    <div class="row justify-content-center mt-3">
        <div class="col-xl-6 col-sm-8">
            <div class="card">
                <div class="card-body">
                    <div class="card-title">
                        <h2>{{#str}}sitemaintenance, core_admin{{/str}}</h2>
                    </div>
                    <div>
                        {{{maintenance}}}
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/maintenance}}
{{#js}}
    $('#btnCodigoTrabajador').on('click', function(){
        $('#primaryLoginTASA').hide();
        $('#customLoginTASA').show();
    });

    $('#btnLoginTASA').on('click', function(){
    var dni = $('#dniTASA').val();
    var codigo = $('#codigoTrabajadorTASA').val();

    var formValues = {
        dni: dni,
        codigo: codigo
    };

    $.ajax ({
    url: 'ajax_controller_get_number.php',
    type: 'POST',
    data: formValues,
        success: function(res) {
            var phoneNumber = res.data;
