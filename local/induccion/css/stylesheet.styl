    from
        background-position-x 0
    to
        background-position-x -1759px
@keyframes actual
    0%
        transform scale(1)
    50%
        transform scale(.9)
    100%
        transform scale(1)
@keyframes cofre
    from
        background-position-x: 0px
    to
        background-position-x: -1250px
@keyframes show-final
    0%
        transform scale(.1)
        opacity 1
    100%
        transform scale(2)
        opacity 1
@keyframes rotate-360
    0%
        transform: rotate(0deg)
    100%
        transform: rotate(350deg)
