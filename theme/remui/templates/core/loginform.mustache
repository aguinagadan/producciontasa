                    {{/logourl}}
                    {{^logourl}}
                        <h2 class="card-header text-center bg-transparent mb-3 p-4"><i class="fa fa-{{siteicon}}"></i> {{sitename}}</h2>
                    {{/logourl}}
                {{/logopos}}
                {{/loginpage_context}}
                <div class="card-body">
                    {{#cansignup}}
                        <div class="sr-only">
                            <a href="{{signupurl}}">{{#str}} tocreatenewaccount {{/str}}</a>
                        </div>
                    {{/cansignup}}

                    {{#error}}
