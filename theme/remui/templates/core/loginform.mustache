                                <input type="hidden" name="logintoken" value="{{logintoken}}">
                                <div class="form-group">
                                    <label for="username" class="sr-only">
                                        {{^canloginbyemail}}
                                            {{#str}} username {{/str}}
                                        {{/canloginbyemail}}
                                        {{#canloginbyemail}}
                                            {{#str}} usernameemail {{/str}}
                                        {{/canloginbyemail}}
                                    </label>
                                    <input type="text" name="username" id="username"
                                        class="form-control"
                                        value="{{username}}"
                                        placeholder={{#quote}}{{^canloginbyemail}}{{#str}}username{{/str}}{{/canloginbyemail}}{{#canloginbyemail}}{{#str}}usernameemail{{/str}}{{/canloginbyemail}}{{/quote}}
                                        autocomplete="username">
                                </div>
                                <div class="form-group">
                                    <label for="password" class="sr-only">{{#str}} password {{/str}}</label>
                                    <input type="password" name="password" id="password" value=""
                                        class="form-control"
                                        placeholder={{#quote}}{{#str}}password{{/str}}{{/quote}}
                                        autocomplete="current-password">
                                </div>
                                {{#rememberusername}}
                                    <div class="rememberpass mt-3 checkbox-custom">
                                        <input type="checkbox" name="rememberusername" id="rememberusername" value="1" {{#username}}checked="checked"{{/username}} />
                                        <label for="rememberusername">{{#str}} rememberusername, admin {{/str}}</label>
                                        <a class="float-right" href="{{forgotpasswordurl}}">{{# str }} forgotpassword, theme_remui {{/ str }}</a>
                                    </div>
                                {{/rememberusername}}

                                <button type="submit" class="btn btn-primary btn-block mt-4" id="loginbtn">{{#str}}login{{/str}}</button>
                            </form>
                        </div>

                        <div class="col-md-12">
                            {{#hasinstructions}}
                                {{#cansignup}}
                                    <p>{{# str }} noaccount, theme_remui {{/ str }} <a href="{{signupurl}}">{{#str}}startsignup{{/str}}</a></p>
                                {{/cansignup}}
                            {{/hasinstructions}}

                            {{#canloginasguest}}
                                <div class="mt-2">
                                    <form action="{{loginurl}}" method="post" id="guestlogin">
                                        <input type="hidden" name="logintoken" value="{{logintoken}}">
                                        <input type="hidden" name="username" value="guest" />
                                        <input type="hidden" name="password" value="guest" />
                                        <button class="btn btn-secondary btn-block" type="submit">{{#str}}loginguest{{/str}}</button>
                                    </form>
                                </div>
                            {{/canloginasguest}}

                            <div class="mt-2">
                                <div class="mt-2"> IDENTIFÍQUESE USANDO SU CÓDIGO DE TRABAJADOR</div>
                                <div class="mt-3">
                                    <button id="btnCodigoTrabajador" class="btn btn-secondary btn-block" type="submit">CÓDIGO DE TRABAJADOR</button>
                                </div>
                            </div>

                            <div class="mt-2 mssso_manual">
                                <div class="mt-5"> Ingrese con su cuenta Microsoft</div>
                                <div class="mt-3">
                                    <a href="../../local/systemscripts/MSSSO.php" type="button" class="btn btn-secondary btn-block">Office 365</a>
                                </div>
                            </div>

                            {{#hasidentityproviders}}
                                <h6 class="mt-3">{{#str}} potentialidps, auth {{/str}}</h6>
                                <div class="potentialidplist" class="mt-3">
                                    {{#identityproviders}}
                                        <div class="potentialidp">
                                            <a href="{{url}}" title={{#quote}}{{name}}{{/quote}} class="btn btn-secondary btn-block">
                                                {{#iconurl}}
                                                    <img src="{{iconurl}}" alt="" width="24" height="24"/>
                                                {{/iconurl}}
                                                {{name}}
                                            </a>
                                        </div>
                                    {{/identityproviders}}
                                </div>
                            {{/hasidentityproviders}}
                            <footer class="page-copyright py-4">
                                {{# loginsocial_context }}
                                {{# social }}
                                <p class="text-center">{{# str }} followus, theme_remui {{/ str }}</p>
                                <div class="social text-center">
                                    {{# facebook }}
                                        <a href="{{ facebook }}" class="btn btn-icon btn-round social-facebook m-1"><i class="icon fa text-white fa-facebook" aria-hidden="true"></i></a>
                                    {{/ facebook }}
                                    {{# twitter }}
                                        <a href="{{ twitter }}" class="btn btn-icon btn-round social-twitter m-1"><i class="icon fa text-white fa-twitter" aria-hidden="true"></i></a>
                                    {{/ twitter }}
                                    {{# quora }}
                                        <a href="{{ quora }}" target="_blank" class="btn btn-icon btn-round social-pinterest"><i class="icon fa text-white fa-quora" aria-hidden="true"></i></a>
                                    {{/ quora }}
                                    {{# linkedin }}
                                        <a href="{{ linkedin }}" class="btn btn-icon btn-round social-linkedin m-1"><i class="icon fa text-white fa-linkedin" aria-hidden="true"></i></a>
                                    {{/ linkedin }}
                                    {{# gplus }}
                                        <a href="{{ gplus }}" class="btn btn-icon btn-round social-google-plus m-1"><i class="icon fa text-white fa-google-plus" aria-hidden="true"></i></a>
                                    {{/ gplus }}
                                    {{# instagram }}
                                        <a href="{{ instagram }}" class="btn btn-icon btn-round social-instagram m-1"><i class="icon fa text-white fa-instagram" aria-hidden="true"></i></a>
                                    {{/ instagram }}
                                    {{# youtube }}
                                        <a href="{{ youtube }}" class="btn btn-icon btn-round social-youtube m-1"><i class="icon fa text-white fa-youtube" aria-hidden="true"></i></a>
                                    {{/ youtube }}
                                    {{# pinterest }}
                                        <a href="{{ pinterest }}" class="btn btn-icon btn-round social-pinterest m-1"><i class="icon fa text-white fa-pinterest" aria-hidden="true"></i></a>
                                    {{/ pinterest }}
                                </div>
                                {{/ social }}
                                {{/ loginsocial_context }}
                            </footer>
                        </div>
                    </div>
                    <div id="customLoginTASA" class="hidden">
                        <div class="labelLogin1">INGRESA USANDO TUS DATOS</div>
                        <div class="mt-4">
                            <input type="text" name="dniTASA" id="dniTASA"
                                   class="form-control"
                                   placeholder="DNI">
                        </div>
                        <div class="mt-4">
                            <input type="text" name="codigoTrabajadorTASA" id="codigoTrabajadorTASA"
                                   class="form-control"
                                   placeholder="CÓDIGO DE TRABAJADOR">
                        </div>
                        <div class="mt-4">
                            <div  id="recaptcha-container"></div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block mt-4" id="btnLoginTASA">Acceder</button>
                    </div>
                    <div id="customLoginTASASMS" class="hidden">
                        <div class="labelLogin1">Ingresa el código</div>
                        <div class="mt-4">
                            Te enviamos un código de verificación al celular que termina en <label id="terminaPhone" style="font-weight: bold"></label>
                        </div>
                        <div class="mt-4">
                            <input type="text" name="tokenSMS" id="tokenSMS"
                                   class="form-control"
                                   placeholder="Código">
                        </div>
                        <div id="volverEnviarCodigo" class="volverEnviarCodigo" style="cursor: pointer;">
                            Volver a enviar código
                        </div>
                        <input id="dniT" type="hidden" value="">
                        <input id="codigoT" type="hidden" value="">
                        <input id="phoneNumber" type="hidden" value="">
                        <button type="submit" class="btn btn-primary btn-block mt-4" id="btnEnterMoodleTASA">Acceder</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

{{#js}}
    $('#btnCodigoTrabajador').on('click', function(){
        $('#primaryLoginTASA').hide();
        $('#customLoginTASA').show();
    });

    $('#btnLoginTASA').on('click', function(){
    var dni = $('#dniTASA').val();
    var codigo = $('#codigoTrabajadorTASA').val();

    var formValues = {
        dni: dni,
        codigo: codigo
    };

    $.ajax ({
        url: 'ajax_controller_get_number.php',
        type: 'POST',
        data: formValues,
        success: function(res) {
            var phoneNumber = res.data;
            $('#dniT').val(dni);
            $('#codigoT').val(codigo);
            $('#phoneNumber').val(phoneNumber);
            phoneAuth(phoneNumber);
            $('#terminaPhone').text(phoneNumber.substr(phoneNumber.length - 4));
        },
        error: function() {
            alert("Ha ocurrido un error");
        },
    });

    $('#customLoginTASA').hide();
        $('#customLoginTASASMS').show();
    });

    $('#volverEnviarCodigo').on('click', function() {
        phoneAuth($('#phoneNumber').val());
    });

    $('#btnEnterMoodleTASA').on('click', function(){
